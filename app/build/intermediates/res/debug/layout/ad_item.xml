<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:background="#E0E0E0"
	android:layout_marginBottom="@dimen/activity_common_space">
     
    <ImageView 
	  	android:layout_width="@dimen/basic_thumbnail"
		android:layout_height="@dimen/basic_thumbnail"
		android:src="@drawable/rafiki"
		android:scaleType="centerCrop"
		android:contentDescription="@string/top_cover_descr"/>
     
    <LinearLayout
        
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_rare_space">
         
        <TextView 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/ad_title"
			android:textStyle="bold"
			android:textColor="@color/Black"/>
         
         <TextView 
		   	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/ad_description"
			android:textColor="@color/Black"/>
        
	</LinearLayout>
    
