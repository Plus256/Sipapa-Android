<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:background="@color/White"
	android:layout_marginBottom="@dimen/activity_common_space">
     
    <ImageView
        android:id="@+id/article_image" 
	  	android:layout_width="@dimen/basic_thumbnail"
		android:layout_height="@dimen/basic_thumbnail"
		android:src="@drawable/facebook_delete"
		android:scaleType="centerCrop"
		android:contentDescription="@string/top_cover_descr"/>
     
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_rare_space">
         
        <TextView 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/top_article_title"
			android:id="@+id/article_title"
			android:textColor="@color/Black"/>
         
         <TextView 
		   	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/top_article_cat"
			android:textColor="@color/DarkOrange"/>
         
         <TextView 
		   	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/article_date"
			android:textStyle="italic"
			android:textColor="@color/Black"/>
        
	</LinearLayout>
    
</LinearLayout><!-- From: file:/Users/Collins/Android/Sipapa-Android/app/src/main/res/layout/article_row.xml -->